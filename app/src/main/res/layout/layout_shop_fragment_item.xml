<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/total_layout">
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#cccccc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/view_color"
            android:text="火爆单品" />
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#cccccc"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:background="@mipmap/ic_default"/>
        <TextView
            android:id="@+id/product_title"
            android:layout_below="@+id/product_img"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_0"
            android:textSize="13sp"
            android:text="商品名"/>
        <TextView
            android:id="@+id/product_price"
            android:layout_below="@+id/product_title"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_0"
            android:text="价格"/>
        <TextView
            android:id="@+id/product_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_price"
            android:layout_alignBottom="@+id/product_price"
            android:layout_marginLeft="13dp"
            android:textSize="12sp"
            android:textColor="@color/black_8"
            android:text="原价"/>
        <TextView
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/product_title"
            android:layout_marginTop="10dp"
            android:background="@mipmap/buy_bg"
            android:paddingBottom="7dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="10dp"
            android:text="立即抢购"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>


</LinearLayout>
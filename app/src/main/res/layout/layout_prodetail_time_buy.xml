<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_ms_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/_ff482a"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/product_ms_price_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="17sp"
        tools:text="aa" />

    <TextView
        android:id="@+id/product_ms_price_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/product_ms_price_now"
        android:textColor="#99fefefe"
        android:textSize="13sp"
        tools:text="aa" />

    <com.bby.yishijie.member.widgets.CountDownView.CountdownView
        android:id="@+id/countdown_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:isHideTimeBackground="false"
        app:isShowHour="true"
        app:isTimeTextBold="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:timeBgColor="#ff1d19"
        app:timeTextColor="@color/white"
        app:timeTextSize="15sp" />

    <TextView
        android:id="@+id/countdown_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/countdown_view"
        android:text="还剩"
        android:textColor="@color/white" />

</RelativeLayout>
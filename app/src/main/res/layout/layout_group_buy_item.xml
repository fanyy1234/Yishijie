<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/total_layout">

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@mipmap/ic_default"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_img"
        android:layout_marginTop="10dp"
        android:textColor="@color/black_0"
        android:maxLines="2"
        tools:text="描述"/>

    <TextView
        android:id="@+id/group_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_title"
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:textColor="@color/black_5"
        android:text="开团人数"/>
    <TextView
        android:id="@+id/price_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/group_num"
        android:layout_toRightOf="@+id/group_num"
        android:layout_marginLeft="5dp"
        android:text="价格"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/price_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/price_now"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/price_now"
        android:text="价格"
        android:textColor="@color/black_8"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/product_title"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_red_shape"
        android:paddingBottom="10dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp"
        android:text="去开团 >"
        android:textColor="@color/white" />


</RelativeLayout>
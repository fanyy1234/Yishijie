<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@null"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="54dp"/>
        <TextView
            android:id="@+id/txt_size"
            android:layout_marginTop="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="规格"
            android:textColor="@color/black_5">
        </TextView>
        <com.sunday.common.widgets.NoScrollGridView
            android:id="@+id/size_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="6dp">
        </com.sunday.common.widgets.NoScrollGridView>
        <TextView
            android:id="@+id/txt_color"
            android:layout_marginTop="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="颜色"
            android:textColor="@color/black_5">
        </TextView>
        <com.sunday.common.widgets.NoScrollGridView
            android:id="@+id/color_gridview"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="6dp">
        </com.sunday.common.widgets.NoScrollGridView>
        <View
            android:background="#30000000"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:minHeight="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
            <TextView
                android:text="数量"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/sub"
                android:src="@mipmap/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/show_num"
                android:text="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_6"/>
            <ImageView
                android:id="@+id/add"
                android:src="@mipmap/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#30000000"/>
        <LinearLayout
            android:id="@+id/buy_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_cart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/black_3" />
            <TextView
                android:id="@+id/buy_now"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:padding="6dp"
        android:id="@+id/top"
        android:background="@drawable/popu_top_img"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/popu_top_img"
            android:scaleType="fitXY"
            android:src="@drawable/default_error"
            android:layout_width="80dp"
            android:layout_height="70dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/product_price"
        android:textSize="18sp"
        android:text="¥ 0.00"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/top"
        android:layout_toEndOf="@+id/top"
        android:textColor="@color/black_0"/>

    <TextView
        android:id="@+id/product_store_num"
        android:textSize="16sp"
        android:text="库存 0"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black_5"
        android:layout_below="@+id/product_price"
        android:layout_toRightOf="@+id/top"
        android:layout_toEndOf="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/select_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_store_num"
        android:layout_alignTop="@+id/product_store_num"
        android:layout_marginLeft="13dp"/>
    <ImageView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/product_price"
        android:padding="6dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/cancel"/>

</RelativeLayout>
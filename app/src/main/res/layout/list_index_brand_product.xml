<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            tools:background="@color/_c4c4c4" />

        <TextView
            android:id="@+id/product_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="4dp"
            android:background="@drawable/shape_red_stroke"
            android:padding="2dp"
            android:text="特卖"
            android:textColor="@color/main_color"
            android:textSize="11sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_layout"
        android:textColor="@color/main_color"
        android:textSize="11sp"
        tools:text="aaa" />

    <TextView
        android:id="@+id/product_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/product_price"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/product_price"
        android:maxLength="6"
        android:textColor="@color/black_8"
        android:textSize="10sp"
        tools:text="aa" />
</RelativeLayout>
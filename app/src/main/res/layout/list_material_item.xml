<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="13dp">
<TextView
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lineSpacingMultiplier="1.2"
    android:textColor="@color/black_3"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/common_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/btn_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="保存图片"
    android:drawablePadding="6dp"
    android:layout_toLeftOf="@+id/btn_copy"
   android:layout_marginRight="30dp"
    android:drawableLeft="@mipmap/btn_save"
    android:textColor="@color/black_5"/>
        <TextView
            android:id="@+id/btn_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制文案"
            android:drawableLeft="@mipmap/copy_text"
            android:drawablePadding="6dp"
            android:textColor="@color/black_5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_copy"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@mipmap/share"
            android:text="分享"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:textColor="@color/black_5"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total_layout"
        android:padding="10dp"
        android:background="@drawable/shape_bfbfbf_stroke"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_default"/>
        <RelativeLayout
            android:id="@+id/product_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/product_img"
            android:layout_alignTop="@+id/product_img">
            <TextView
                android:id="@+id/product_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特卖"
                android:padding="2dp"
                android:background="@drawable/shape_red_stroke"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:textColor="@color/main_color"/>
            <TextView
                android:id="@+id/product_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/product_tag1"
                android:padding="2dp"
                android:background="@drawable/shape_yellow_stoke"
                android:textSize="12sp"
                android:textColor="#eb3349"
                android:text="可积分购买"
                />
            <TextView
                android:id="@+id/product_title"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:textSize="12sp"
                android:maxLines="2"
                android:textColor="@color/black_0"
                tools:text="\t\t\t\t\t\taaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/price_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_img"
            android:layout_alignBottom="@+id/product_img"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/product_title_layout"
            android:textSize="12sp"
            android:text="价格"
            android:textColor="@color/black_0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_tag"
            android:text="赚"
            android:background="@drawable/shape_red"
            android:padding="1dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/price_now"
            android:layout_alignBottom="@+id/price_now"
            android:layout_marginLeft="3dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/price_now"
            android:layout_toRightOf="@+id/price_tag"
            android:layout_marginLeft="3dp"
            android:text="价格"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/store_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/price_now"
            android:layout_alignBottom="@+id/product_img"
            android:layout_marginBottom="2dp"
            android:textColor="@color/black_8"
            android:textSize="13sp"
            tools:text="库存"
            android:visibility="gone"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/store_product_del"
        android:layout_gravity="right"/>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/total_layout">
    <ImageView
        android:id="@+id/main_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@mipmap/ic_default"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/brand_img"
        android:layout_below="@+id/main_img"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_default"
        android:scaleType="fitXY"
        android:layout_width="45dp"
        android:layout_height="45dp" />
<TextView
    android:id="@+id/brand_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/brand_img"
    android:layout_marginLeft="12dp"
    android:layout_alignTop="@+id/brand_img"/>
    <TextView
        android:id="@+id/brand_star"
        android:layout_below="@+id/brand_title"
        android:layout_alignLeft="@+id/brand_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/brand_img"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/product_share"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp"/>
    <ImageView
        android:id="@+id/btn_add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/product_add"
        android:layout_toLeftOf="@+id/btn_share"
        android:layout_alignBottom="@+id/btn_share"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp"/>
</RelativeLayout>
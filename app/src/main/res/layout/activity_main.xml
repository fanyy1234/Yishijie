<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fitsSystemWindows="true" />
    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="首页"
            android:textColor="@color/main_bottom_tab_text"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/bottom_tab_shouye"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/tab6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="商品"
            android:textColor="@color/main_bottom_tab_text"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/bottom_tab_jingxuan"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="发现"
            android:textColor="@color/main_bottom_tab_text"
            android:gravity="bottom|center_horizontal"
            android:drawableTop="@drawable/bottom_tab_find"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/tab7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="店铺"
            android:textColor="@color/main_bottom_tab_text"
            android:gravity="bottom|center_horizontal"
            android:drawableTop="@drawable/bottom_tab_shop"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/bottom_tab_jingxuan"
            android:text="店主精选"
            android:textColor="@color/main_bottom_tab_text"
            android:gravity="bottom|center_horizontal"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/tab4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/bottom_tab_jifen"
            android:text="积分商城"
            android:textColor="@color/main_bottom_tab_text"
            android:gravity="bottom|center_horizontal"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/tab5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/bottom_tab_mine"
            android:text="我的"
            android:textColor="@color/main_bottom_tab_text"
            android:gravity="bottom|center_horizontal"
            android:drawablePadding="5dp"/>
    </LinearLayout>

</LinearLayout>

